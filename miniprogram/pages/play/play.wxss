}

.rotation{
  animation: rotation 20s linear infinite;
}

@-webkit-keyframes rotation {
    from 
    {transform: rotate(0deg);}
    to 
    {transform: rotate(360deg);}
    }

.ripple {
  background-color: 	#DCDCDC; 
  border-radius: 50%;
  height: 50px;
  width: 50px;
  position: absolute;
  opacity: 0.3;
  transform: scale(0); 
}

   
@-webkit-keyframes ripple {
  100% {
    border-radius: 50%;
    transform: scale(2);
    opacity: 0.1;
  }
}


