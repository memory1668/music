page{
  height: 100%;
}
.container{
  height:100%; 
  position: relative;
  overflow: hidden;
}
.image-background1{
  width:100%;
  height:100%;
  position: absolute;
  filter: blur(30rpx);
  transform: scale(1.15);
  z-index: -1;
}
 .image-background1:after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.6);   
}
.scroll-lrc{
  margin: 50rpx 0;
  color: #D2E9FF;
  text-align: center;
  height:400rpx;
  line-height: 1.5em;
} 

.button{
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.now{
