.background{
  z-index: -1;
  position: fixed;
  width:100%;
  height:100%;
}


.wrap{
  padding: 20rpx;
  display: flex;
  /* flex-direction: row-reverse; */
}
.pic{
  width: 200rpx;
  height: 200rpx;
}
.back{
  background-color: #222;
  width: 750rpx;
  height: 200rpx;
  position: absolute;
  opacity: 0.2;
  z-index: -1;
}
.introduce{
  font-size: 30rpx;
  line-height: 2;
  width: 510rpx;
  color: #D2E9FF;
  text-indent: 50rpx;
  margin-top: 30rpx;
}
.play{
  position: fixed;
  bottom:50rpx;
  right: 50rpx;
  width: 150rpx;
  height: 150rpx;
}
.tip{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -24rpx;
  margin-left:-201rpx;
  color: #D2E9FF;
}
